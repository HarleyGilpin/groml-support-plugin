root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 450
end_of_line = lf
indent_style = space
indent_size = 4

[*.{kt,kts}]
# Kotlin-specific overrides
ij_wrap_on_typing = true
ij_any_wrap_long_lines = true

[*.md]
max_line_length = 80
indent_size = 2